{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "maxLambdaSize": "15mb",
                "handler": "handler",
                "buildCommand": "pip install --upgrade pip && pip install wheel setuptools && pip install -r api/requirements.txt"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "env": {
        "POSTGRES_URL": "@postgres_url",
        "FLASK_SECRET_KEY": "@flask_secret_key"
    },
    "build": {
        "env": {
            "POSTGRES_URL": "@postgres_url",
            "FLASK_SECRET_KEY": "@flask_secret_key"
        }
    }
}
