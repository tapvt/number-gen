{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "maxLambdaSize": "15mb",
                "handler": "handler"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "env": {
        "POSTGRES_URL": "${POSTGRES_URL}",
        "FLASK_SECRET_KEY": "${FLASK_SECRET_KEY}"
    }
}
